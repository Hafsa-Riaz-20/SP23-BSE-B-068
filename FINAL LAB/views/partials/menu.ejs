                    <a href="/admin/products" class="me-3">Admin Panel</a>
                    
                    <span class="user-name-top" style="position: absolute; top: -12px; font-size: 10px;">Welcome, <%= user.name %>!</span> 
                    <a href="/signout" class="me-3">Sign Out</a>
                <% } %>
                
                <a href="/cart" class="cart-icon" title="<%= cartCount %>">ðŸ›’</a>

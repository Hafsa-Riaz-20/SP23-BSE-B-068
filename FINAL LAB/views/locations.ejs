<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Royal Furniture - Locations</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .location-card {
            border: 1px solid #ddd;
            border-radius: 8px;
            overflow: hidden;
            transition: transform 0.3s ease-in-out;
        }
        .location-card:hover {
            transform: translateY(-5px);
        }
        .location-image {
            height: 200px;
            object-fit: cover;
        }
    </style>
</head>
<body>
    <%- include('./partials/menu.ejs') %>

    <main class="container my-5">
        <div class="text-center mb-5">
            <img src="/assets/logoo.jpg" alt="Royal Furniture Logo" class="img-fluid" style="max-width: 300px;">
            <h1 class="mt-3">Welcome to Royal Furniture</h1>
            <p class="lead">Providing quality furniture for your home since 1946</p>
        </div>

        <h2 class="text-center mb-4">Tennessee Store Locations</h2>

        <div class="row g-4">
            <% const locations = [
                { name: "Memphis - Hickory Hill", address: "3575 Hacks Cross Rd, Memphis, TN 38125", phone: "(901) 368-0001", hours: "Mon-Sat: 10am-8pm, Sun: 12pm-6pm", image: "/assets/store1.jpg" },
                { name: "Memphis - Cordova", address: "2255 N Germantown Pkwy, Cordova, TN 38016", phone: "(901) 381-0002", hours: "Mon-Sat: 10am-8pm, Sun: 12pm-6pm", image: "/assets/store2.jpg" },
                { name: "Memphis - Southaven", address: "7905 Southcrest Pkwy, Southaven, MS 38671", phone: "(662) 349-0003", hours: "Mon-Sat: 10am-8pm, Sun: 12pm-6pm", image: "/assets/store3.jpg" },
                { name: "Memphis - Bartlett", address: "8045 Highway 64, Bartlett, TN 38133", phone: "(901) 382-0004", hours: "Mon-Sat: 10am-8pm, Sun: 12pm-6pm", image: "/assets/store4.jpg" },
                { name: "Memphis - Collierville", address: "1055 W Poplar Ave, Collierville, TN 38017", phone: "(901) 853-0005", hours: "Mon-Sat: 10am-8pm, Sun: 12pm-6pm", image: "/assets/store5.jpg" },
                { name: "Nashville - Cool Springs", address: "1731 Mallory Ln, Brentwood, TN 37027", phone: "(615) 376-0006", hours: "Mon-Sat: 10am-8pm, Sun: 12pm-6pm", image: "/assets/store6.jpg" },
                { name: "Nashville - Hermitage", address: "5000 Old Hickory Blvd, Hermitage, TN 37076", phone: "(615) 889-0007", hours: "Mon-Sat: 10am-8pm, Sun: 12pm-6pm", image: "/assets/store7.jpg" },
                { name: "Knoxville - Turkey Creek", address: "10978 Parkside Dr, Knoxville, TN 37934", phone: "(865) 675-0008", hours: "Mon-Sat: 10am-8pm, Sun: 12pm-6pm", image: "/assets/store8.jpg" },
                { name: "Chattanooga - Hamilton Place", address: "2200 Hamilton Place Blvd, Chattanooga, TN 37421", phone: "(423) 855-0009", hours: "Mon-Sat: 10am-8pm, Sun: 12pm-6pm", image: "/assets/store9.jpg" },
                { name: "Jackson", address: "15 Stonebridge Blvd, Jackson, TN 38305", phone: "(731) 660-0010", hours: "Mon-Sat: 10am-8pm, Sun: 12pm-6pm", image: "/assets/store10.jpg" }
            ] %>

            <% locations.forEach(location => { %>
                <div class="col-md-6">
                    <div class="location-card">
                        <img src="<%= location.image %>" alt="<%= location.name %>" class="card-img-top location-image">
                        <div class="card-body">
                            <h5 class="card-title"><%= location.name %></h5>
                            <p class="card-text"><%= location.address %></p>
                            <p class="card-text"><strong>Phone:</strong> <%= location.phone %></p>
                            <p class="card-text"><strong>Hours:</strong> <%= location.hours %></p>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </main>

    <%- include('./partials/footer.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


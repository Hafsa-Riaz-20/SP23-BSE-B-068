<div class="container mt-5">
    <h3 class="text-center text-primary mb-4"><%- pageTitle %></h3>
  
    <div class="d-flex justify-content-end mb-3">
      <a href="/admin/createCategory" class="btn btn-success btn-lg">Create New Category</a>
    </div>
  
    <div class="table-responsive">
      <table class="table table-striped table-hover table-bordered align-middle shadow">
        <thead class="table-primary text-center">
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% for (let index = 0; index < categories.length; index++) { %>
          <tr>
            <td class="text-center"><%= categories[index]._id %></td>
            <td><%= categories[index].name %></td>
            <td><%= categories[index].description %></td>
            <td class="text-center">
              <span class="badge bg-<%= categories[index].status === 'available' ? 'success' : 'danger' %>">
                <%= categories[index].status %>
              </span>
            </td>
            <td class="text-center">
              <a
                href="/admin/categories/editForm/<%= categories[index]._id %>"
                class="btn btn-warning btn-sm me-1"
                >Edit</a
              >
              <a
                href="/admin/categories/delete/<%= categories[index]._id %>"
                class="btn btn-danger btn-sm ms-1"
                onclick="return confirm('Are you sure you want to delete this category?')"
                >Delete</a
              >
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
  
  